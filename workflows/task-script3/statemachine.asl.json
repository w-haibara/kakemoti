{
  "Comment": "Examples of task state and input/output filters.",
  "StartAt": "Task1",
  "States": {
    "Task1": {
      "Type": "Task",
      "Resource": "script:workflows/task-script1/task.sh",
      "InputPath": "$.script",
      "Parameters": {
        "args": ["aaa", "bbb", "ccc"]
      },
      "ResultSelector": {
        "aaa": "111",
        "bbb": "222",
        "payload.$": "$.result"
      },
      "ResultPath": "$.data.scriptresult",
      "OutputPath": "$.data",
      "End": true
    }
  }
}